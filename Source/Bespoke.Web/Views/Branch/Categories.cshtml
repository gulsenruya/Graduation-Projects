
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    @model  Bespoke.Web.Model.CategoryModel
}

@{
    if (!string.IsNullOrEmpty(Model.Message))
    {
        <script>
                $(document).ready(function () {
                    swal("Success", "@Html.Raw(Model.Message)", "success");
                })
        </script>
    }
}

@{
    var user = (Bespoke.Data.Model.User)Session["Active-User"];

}

<div>
    <br />
    <a href="/Branch/CreateCategory/@user.BranchId">Create a New Category</a>
    <br />
</div>
<br />

<div class="bs-example">
    <table class="table">
        <thead>
            <tr>
                <th>#</th>
                <th>Name</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @{

                foreach (var item in Model.Categories)
                {
                    <tr>
                        <td>@item.Id</td>
                        <td>@item.Name</td>
                        <td><a href="/Branch/UpdateCategory/@item.Id">Update</a></td>
                        <td><a href="/Branch/RemoveCategory/@item.Id">Remove</a></td>
                    </tr>
                }
            }
        </tbody>
    </table>
</div>